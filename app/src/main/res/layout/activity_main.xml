<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/actionMenuTextColor"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".MainActivity">

    <Button

        android:id="@+id/enterSheave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:onClick="onClickEnterSheave"
        android:text="Enter New sheave measurement"
        android:textSize="20sp"
        android:layout_marginBottom="@dimen/horizontal_padding"
        android:layout_marginHorizontal="@dimen/horizontal_padding"/>

    <Button
        android:id="@+id/viewSheave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:onClick="onClickViewSheave"
        android:text="view all sheave measurements"
        android:layout_marginHorizontal="@dimen/horizontal_padding"
        android:textSize="20sp" />

</LinearLayout>